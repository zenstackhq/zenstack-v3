datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Session {
    id     String @id
    token  String
    userId String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    @@auth
}

model User {
    id       String    @id @default(uuid())
    sessions Session[]
    profile  Profile?
}

model Profile {
    id     String  @id @default(uuid())
    name   String?
    userId String  @unique
    user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}
