{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["src/**", "zenstack/*.zmodel"],
            "outputs": ["dist/**"]
        },
        "watch": {
            "dependsOn": ["^watch"],
            "inputs": ["src/**", "zenstack/*.zmodel"],
            "outputs": []
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "test": {
            "dependsOn": ["build"]
        }
    }
}
