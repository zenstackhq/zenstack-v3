datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id    Int    @id @default(autoincrement())
    email String @map('user_email') @unique
    posts Post[]
    @@map('users')
}

model Post {
    id       Int    @id @default(autoincrement())
    title    String @map('post_title')
    author   User   @relation(fields: [authorId], references: [id])
    authorId Int    @map('author_id')
    @@map('posts')
}