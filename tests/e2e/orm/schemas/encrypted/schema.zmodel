datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id          String @id @default(cuid())
    email       String @unique
    name        String?
    secretToken String @encrypted
    posts       Post[]
}

model Post {
    id        String @id @default(cuid())
    title     String
    content   String?
    encrypted String @encrypted
    author    User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
    authorId  String
}
